import java.util.Scanner;
import java.math.*;

public class MainClassAtAll {

	public static void main(String args[]) {

		int sizeOfArray;
		Scanner sc = new Scanner(System.in);

		System.out.println("Please, enter the size of array: ");
		sizeOfArray = sc.nextInt();

		int[] taskArray = new int[sizeOfArray]; // узнали размер массива

		System.out.println("Now, please fill the aray of " + sizeOfArray + "numbers: ");

		for (int i = 0; i < taskArray.length; i++) {
			taskArray[i] = sc.nextInt(); // заполняем массив цифрами
		}

		for (int i = 0; i < taskArray.length; i++) {
			System.out.print(" " + taskArray[i] + " ");
		}
		System.out.println(" ");
		System.out.println("And reverse array: ");
		System.out.println(" ");
		for (int j = sizeOfArray - 1; j >= 0; j--) { // обратный отчет размер-1 ибо отсчет с 0 а не с 1
			System.out.print(" " + taskArray[j] + " ");
		}

	}

}
